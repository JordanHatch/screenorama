<%= semantic_form_for screen do |f| %>

  <%= f.inputs do %>
    <% if f.object.new_record? %>
      <%= f.input :device_id, label: 'Device ID' %>
    <% end %>
    <%= f.input :name, label: 'Descriptive name' %>
    <%= f.input :url, label: 'URL' %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, as: :button %>
    <%= f.action :cancel, as: :link %>
  <% end %>

<% end %>
